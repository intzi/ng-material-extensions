{
  "name": "ng-material-extensions",
  "version": "17.0.0",
  "license": "Apache-2.0",
  "description": "Extended features for @angular/material components - Fork with Angular 16+ support",
  "author": "Halit Talha TÃ¼re (Original), intzi (Angular 16+ fork)",
  "repository": {
    "type": "git",
    "url": "https://github.com/intzi/ng-material-extensions"
  },
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "build-docs": "ng build --configuration production --base-href /ng-material-extensions/",
    "build-stats": "ng build --stats-json",
    "analyze": "webpack-bundle-analyzer docs/stats.json",
    "postinstall": "npm run install:libs",
    "install:libs": "npm run install:lib:build",
    "install:lib:build": "npx @angular/cli@17 build cdk-table-exporter && npx @angular/cli@17 build mat-table-exporter && npx @angular/cli@17 build mat-table-filter",
    "clean:libs": "rm -rf dist/cdk-table-exporter dist/mat-table-exporter dist/mat-table-filter",
    "rebuild:libs": "npm run clean:libs && npm run install:libs"
  },
  "dependencies": {
    "@angular/animations": "^17.3.12",
    "@angular/cdk": "^17.3.10",
    "@angular/common": "^17.3.12",
    "@angular/compiler": "^17.3.12",
    "@angular/core": "^17.3.12",
    "@angular/forms": "^17.3.12",
    "@angular/material": "^17.3.10",
    "@angular/platform-browser": "^17.3.12",
    "@angular/platform-browser-dynamic": "^17.3.12",
    "@angular/router": "^17.3.12",
    "@ctrl/ngx-github-buttons": "^8.0.0",
    "file-saver-es": "^2.0.5",
    "lodash": "^4.17.21",
    "lodash-es": "^4.17.21",
    "marked": "^12.0.2",
    "ngx-markdown": "^17.2.1",
    "prismjs": "^1.29.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "xlsx": "^0.18.5",
    "zone.js": "~0.14.10"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^17.3.17",
    "@angular/cli": "~17.3.17",
    "@angular/compiler-cli": "^17.3.12",
    "@types/jasmine": "~4.0.0",
    "@types/lodash-es": "^4.17.6",
    "@types/marked": "^4.3.2",
    "jasmine-core": "~4.3.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.0.0",
    "ng-packagr": "^17.3.0",
    "typescript": "~5.4.5"
  }
}
